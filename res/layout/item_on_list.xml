<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/item_on_list_ll"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="80dp">

    <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:paddingLeft="12dp"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

        <TextView
                android:id="@+id/item_supplier_name_tv"
                android:text="Duża Micha"
                android:textSize="20sp"
                android:textColor="@color/green"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/item_name_tv"
                android:textColor="@color/blackish"
                android:text="łosoś z pieca, ziemniaki gotowane, szpinak liscie + zupa łosoś z pieca, ziemniaki gotowane, szpinak liscie + zupa"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
    </LinearLayout>

    <LinearLayout
            android:id="@+id/item_price_and_soup_ll"
            android:orientation="vertical"
            android:gravity="center_vertical"

            android:layout_width="80dp"
            android:paddingLeft="10dp"
            android:layout_height="match_parent">

        <TextView
                android:id="@+id/item_price_tv"
                android:text="15.50"
                android:textSize="20dp"
                android:textColor="@color/blackish"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <ImageView
                android:id="@+id/soup_indicator_iv"
                android:src="@drawable/ico_lista_zupa"
                android:paddingLeft="10dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />


    </LinearLayout>
    <ImageView
        android:id="@+id/ordered_ico_iv"
        android:src="@drawable/ico_lista_kurczak"
        android:visibility="gone"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:layout_width="80dp"
        android:layout_height="match_parent"/>


</LinearLayout>